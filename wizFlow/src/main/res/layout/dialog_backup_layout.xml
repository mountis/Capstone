<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <EditText
        android:id="@+id/export_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_half"
        android:layout_marginLeft="@dimen/padding_half"
        android:layout_marginEnd="@dimen/padding_half"
        android:layout_marginRight="@dimen/padding_half"
        android:gravity="center_horizontal">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/backup_existing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#ff0000"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/backup_include_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/backup_include_settings" />

</LinearLayout>
